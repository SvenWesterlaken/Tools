//Mixins
mixin clipboardbtn(text, data)
 button.btn.copyclip(data-clipboard-text:"#{data}", id="#{text}") #{text}
 
mixin linkbtn(text, link, icon)
 a.btn(href="#{link}", id="#{text}") 
  i(class="fa fa-#{icon} fa-lg", aria-hidden="true")
  span #{text}
  
mixin downloadbtn(text, link)
 a.btn(href="#{link}", id="#{text}")
  i(class="fa fa-download fa-lg" aria-hidden="true")
  span #{text}
  
